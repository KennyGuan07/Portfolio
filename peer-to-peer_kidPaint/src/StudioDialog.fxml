<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="300.0" prefWidth="350.0" spacing="20.0" style="-fx-background-color: #fdfdfd;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
    <padding>
        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
    </padding>

    <Label text="Welcome to KidPaint" textFill="#333333">
        <font>
            <Font name="System Bold" size="24.0" />
        </font>
    </Label>

    <Label text="What would you like to do?" textFill="#777777">
        <font>
            <Font size="14.0" />
        </font>
    </Label>

    <Button fx:id="btnHost" maxWidth="Infinity" prefHeight="50.0" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-size: 16px; -fx-cursor: hand;" text="Create a Room" />

    <Button fx:id="btnJoin" maxWidth="Infinity" prefHeight="50.0" style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-font-size: 16px; -fx-cursor: hand;" text="Join a Room" />

</VBox>