<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>All Books</h1>
    <a href="/books/add" class="btn btn-primary">Add</a>
</div>

<div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
    <% if (books.length > 0) { %>
        <% books.forEach(function(book) { %>
            <div class="col">
                <div class="card h-100 shadow-sm">
                    <a href="/books/detail/<%= book._id %>">
                        <img src="<%= book.coverImage || 'https://via.placeholder.com/300x220.png?text=No+Image' %>" class="card-img-top" alt="<%= book.title %>" style="height: 320px; object-fit: cover;">
                    </a>
                    <div class="card-body">
                        <h5 class="card-title"><%= book.title %></h5>
                        <p class="card-text text-muted"><%= book.description ? book.description.substring(0, 100) + '...' : '' %></p>
                    </div>
                    <div class="card-footer bg-white d-flex justify-content-between align-items-center">
                        <small class="text-muted">Updated: <%= new Date(book.updatedAt).toLocaleDateString() %></small>
                        <a href="/books/edit/<%= book._id %>" class="btn btn-outline-secondary btn-sm">Edit</a>
                    </div>
                </div>
            </div>
        <% }); %>
    <% } else { %>
        <div class="col-12">
            <div class="alert alert-info">No books found. Click "Add Book" to get started!</div>
        </div>
    <% } %>
</div>

<% if (totalPages > 1) { %>
<nav aria-label="Page navigation" class="mt-5">
    <ul class="pagination justify-content-center">
        
        <li class="page-item <%= currentPage === 1 ? 'disabled' : '' %>">
            <a class="page-link" href="/books?page=<%= currentPage - 1 %>">Previous</a>
        </li>

        <% for (let i = 1; i <= totalPages; i++) { %>
            <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                <a class="page-link" href="/books?page=<%= i %>"><%= i %></a>
            </li>
        <% } %>

        <li class="page-item <%= currentPage === totalPages ? 'disabled' : '' %>">
            <a class="page-link" href="/books?page=<%= currentPage + 1 %>">Next</a>
        </li>

    </ul>
</nav>
<% } %>